@model IEnumerable<ShooesStore.Models.Shoes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Товар</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Список обуви
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered" >
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.ShoesId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NameShoes)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Manufacturer)
                </th>
                
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">действия</th ">
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.ShoesId
                    </td>
                    <td>
                        @Html.ActionLink(item.NameShoes, "Edit", new { item.ShoesId})
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Manufacturer)
                    </td>
                   
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete","Admin")) {
                            @Html.Hidden("ShoesId",item.ShoesId)
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>


    <div class="panel-footer">
        @Html.ActionLink("Добавить", "Create",null,new { @class = "btn btn-default" })
    </div>
</div>