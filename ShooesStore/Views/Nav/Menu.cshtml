@model IEnumerable<string>

@Html.ActionLink("Главная", "Index","Home", null, new { @class = ("btn btn-block btn-default btn-lg") +(ViewBag.SelectedshoesType == null? "btn btn-block btn-success btn-lg" : "")  })

@foreach (var link in Model)
{
    @Html.RouteLink(link,
      new
      {
          controller = "Home",
          action = "Index",
          shoesType = link,
          page = 1
      },
      new
      {
          @class = ("btn btn-block btn-default btn-lg")
             +(link == ViewBag.SelectedshoesType ? "btn btn-warning btn-lg" : "")
      })
}